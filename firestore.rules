rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Auth helper
    function isSignedIn() {
      return request.auth != null;
    }
    
    // User Rules
    match /users/{userId} {
      // Users can manage their own data
      allow read, write: if isSignedIn() && request.auth.uid == userId;
      
      // Other users can read basic profile info (exclude photoUrl by default if possible, 
      // but security rules are all-or-nothing for a document. 
      // Better to check if there's a mutual reveal connection)
      allow get: if isSignedIn() && (
        request.auth.uid == userId || 
        exists(/databases/$(database)/documents/connections/$(request.auth.uid + "_" + userId)) ||
        exists(/databases/$(database)/documents/connections/$(userId + "_" + request.auth.uid))
        // Note: Real mutual reveal check would be more complex due to rules nature.
        // For now, simpler: allow read if connection exists or is owner.
      );

      match /soul/data {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
        allow read: if isSignedIn();
      }
    }

    // Post Rules
    match /posts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.userId ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes'])
      );
    }

    // Connection Rules
    match /connections/{connectionId} {
      allow read: if isSignedIn() && (
        resource.data.fromUserId == request.auth.uid || 
        resource.data.toUserId == request.auth.uid
      );
      allow create: if isSignedIn() && request.resource.data.fromUserId == request.auth.uid;
      allow update: if isSignedIn() && (
        resource.data.fromUserId == request.auth.uid || 
        resource.data.toUserId == request.auth.uid
      );

      // Subcollection: Messages
      match /messages/{messageId} {
        allow read: if isSignedIn() && (
          get(/databases/$(database)/documents/connections/$(connectionId)).data.fromUserId == request.auth.uid ||
          get(/databases/$(database)/documents/connections/$(connectionId)).data.toUserId == request.auth.uid
        );
        allow create: if isSignedIn() && request.resource.data.senderId == request.auth.uid;
      }
    }
  }
}
